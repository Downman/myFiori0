<core:View controllerName="sap.ui.demo.myFiori.view.Detail" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:m="sap.m"
	xmlns:smartField="sap.ui.comp.smartfield" xmlns:u="sap.ui.unified" xmlns="sap.m">
	<Page class="sapUiFioriObjectPage" navButtonPress="handleNavButtonPress" showNavButton="{device>/isPhone}" title="{i18n>DetailTitle}">
		<ObjectHeader number="{Projectid}" title="{Customer}">
			<attributes>
				<ObjectAttribute text="{Description}"/>
				<ObjectAttribute text="{ path: 'Startdate', formatter: 'sap.ui.demo.myFiori.util.Formatter.date'}"/>
				<ObjectAttribute text="{ path: 'Enddate', formatter: 'sap.ui.demo.myFiori.util.Formatter.date' }"/>
			</attributes>
			<firstStatus>
				<ObjectStatus state="{ path: 'Active', formatter: 'sap.ui.demo.myFiori.util.Formatter.statusState' }"
					text="{ path: 'Active', formatter: 'sap.ui.demo.myFiori.util.Formatter.statusText' }"/>
			</firstStatus>
		</ObjectHeader>
		<IconTabBar expanded="{device>/isNoPhone}" id="iconTabBar" select="handleIconTabBarSelect">
			<items>
				<IconTabFilter icon="sap-icon://document" key="Overview">
					<form:SimpleForm id="SupplierForm" minWidth="1024">
						<Table headerText="{i18n>OverviewText}" id="simpleTable" items="{ProjectToEntries}">
							<columns>
								<Column>
									<header><Label text="{i18n>DateText}"/></header>
								</Column>
								<Column>
									<header><Label text="{i18n>HoursText}"/></header>
								</Column>
							</columns>
							<ColumnListItem press="handleLineItemPress" type="Navigation">
								<cells>
									<ObjectIdentifier title="{path: 'Entryday', formatter: 'sap.ui.demo.myFiori.util.Formatter.date' }"></ObjectIdentifier>
									<Text
										text="{path: 'Entryhours', type: 'sap.ui.model.odata.type.Time', formatOptions: { pattern: 'HH\'h\':mm\'min\'', source: { pattern: 'HH:mm:ss' } } }"/>
								</cells>
							</ColumnListItem>
						</Table>
					</form:SimpleForm>
				</IconTabFilter>
				<IconTabFilter icon="sap-icon://inspection" key="Detail">
					<Toolbar class="sapUiMediumMarginTop">
						<Button icon="sap-icon://arrow-left" press="prevMonth" type="Default"/>
						<ToolbarSpacer/>
						<Label id="monthLabel"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://arrow-right" press="nextMonth" type="Default"/>
					</Toolbar>
					<form:SimpleForm id="DetailForm" minWidth="1024">
						<Table headerText="{i18n>DetailText}" id="simpleTable2" items="{ProjectToEntries}">
							<columns>
								<Column>
									<header><Label text="{i18n>DateText}"/></header>
								</Column>
								<Column>
									<header><Label text="{i18n>ActivityText}"/></header>
								</Column>
								<Column>
									<header><Label text="{i18n>HoursText}"/></header>
								</Column>
								<Column>
									<header><Label text="{i18n>TravelTimeText}"/></header>
								</Column>
								<Column>
									<header><Label text="{i18n>AdditionalCostText}"/></header>
								</Column>
							</columns>
							<ColumnListItem press="handleLineItemPressDetail" type="Navigation">
								<cells>
									<ObjectIdentifier title="{path: 'Entryday', formatter: 'sap.ui.demo.myFiori.util.Formatter.date'}"></ObjectIdentifier>
									<Text text="{Activity}"/>
									<Text
										text="{path: 'Entryhours', type: 'sap.ui.model.odata.type.Time', formatOptions: { pattern: 'HH\'h\':mm\'min\'', source: { pattern: 'HH:mm:ss' } } }"/>
									<Text
										text="{path: 'Traveltime', type: 'sap.ui.model.odata.type.Time', formatOptions: { pattern: 'HH\'h\':mm\'min\'', source: { pattern: 'HH:mm:ss' } } }"/>
									<ObjectNumber number="{Additionalcost}"/>
								</cells>
							</ColumnListItem>
						</Table>
					</form:SimpleForm>
				</IconTabFilter>
				<IconTabFilter icon="sap-icon://add" key="Add">
					<form:SimpleForm emptySpanM="4" emptySpanL="4" editable="true" class="editableForm" columnsM="1" columnsL="1" id="mySimpleForm5" labelSpanL="3"
						labelSpanM="3" layout="ResponsiveGridLayout" maxContainerCols="2" minWidth="1024">
						<smartField:SmartLabel labelFor="idProject1" text="{i18n>DateText}"/>
						<DatePicker class="sapUiSmallMarginBottom" id="idProject1" value="{path: 'Entryday', type: 'sap.ui.model.odata.type.Date'}" valueFormat="dd-MM-yyyy" displayFormat="long"/>
						<smartField:SmartLabel labelFor="idProject2" text="{i18n>ActivityText}"/>
						<smartField:SmartField id="idProject2" value="{Activity}"/>
						<smartField:SmartLabel labelFor="idProject3" text="{i18n>HoursText}"/>
						<DateTimeInput class="sapUiSmallMarginBottom" displayFormat="HH'h' mm'm'" id="idProject3" placeholder="Enter Time ..." step="600" type="Time"
							value="{Entryhours}" valueFormat="HH:mm"/>
						<smartField:SmartLabel labelFor="idProject4" text="{i18n>TravelTimeText}"/>
						<DateTimeInput class="sapUiSmallMarginBottom" displayFormat="HH'h' mm'm'" id="idProject4" placeholder="Enter Time ..." step="600" type="Time"
							value="{Traveltime}" valueFormat="HH:mm"/>
						<smartField:SmartLabel labelFor="idProject5" text="{i18n>AdditionalCostText}"/>
						<smartField:SmartField id="idProject5" value="{Additionalcost}"/>
					</form:SimpleForm>
				</IconTabFilter>
			</items>
		</IconTabBar>
		<footer>
			<Bar>
				<contentRight>
					<Button icon="sap-icon://accept" press="handleApprove" text="{i18n>ApproveButtonText}" type="Accept"/>
					<Select autoAdjustWidth="true" change="handleGroup" icon="sap-icon://group-2" id="groupSelect" selectedKey="None" type="IconOnly">
						<core:Item key="None" text="{i18n>MasterGroupNone}"/>
						<core:Item key="Entryday" text="{i18n>MasterGroupDay}"/>
					</Select>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</core:View>