<core:View controllerName="sap.ui.demo.myFiori.view.LineItem" xmlns:core="sap.ui.core" xmlns="sap.m">
	<Page id="page" navButtonPress="handleNavBack" showNavButton="true" title=" {i18n]LineItemTitle}">
		<footer>
			<Bar></Bar>
		</footer>
		<content>
			<ObjectHeader number="{GrossAmount}" numberUnit="{CurrencyCode}" title="{ProductId}">
				<attributes>
					<ObjectAttribute text="{ path:'DeliveryDate', formatter:'sap.ui.demo.myFiori.util.Formatter.date' }"/>
					<ObjectAttribute text="{ path:'Quantity', formatter:'sap.ui.demo.myFiori.util.Formatter.quantity' }"/>
				</attributes>
			</ObjectHeader>
		</content>
	</Page>
</core:View>